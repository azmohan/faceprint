<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_subscribe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/icon_new"
        android:layout_width="@dimen/droi_qs_tile_icon_size"
        android:layout_height="@dimen/droi_qs_tile_icon_size"
        android:layout_marginTop="@dimen/qs_tile_padding_top"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_new"
        android:layout_centerHorizontal="true"
		android:gravity="center"
		android:singleLine="true"
		android:padding="0dp"
		android:textSize="@dimen/qs_tile_text_size"
		android:textColor="@color/qs_tile_text"
		android:shadowColor="@color/system_primary_color"
               android:shadowDx="0"
               android:shadowDy="0"
               android:shadowRadius="2"
		android:clickable="false" />

</RelativeLayout>
