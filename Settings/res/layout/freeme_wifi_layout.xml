<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    
    android:background="@drawable/freeme_wifi_content_bg">
    <RelativeLayout
        android:id="@+id/freeme_wifi_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
          android:layout_marginTop="@dimen/freeme_wifi_tips_margrin_top"
        >
        <LinearLayout
            android:id="@+id/freeme_wifi"
           android:fitsSystemWindows="true"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="vertical">          
           <ImageView 
               android:id="@+id/freeme_wifi_ic"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView 
               android:id="@+id/freeme_wifi_online_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/freeme_wifi_online_time"
               android:text="@string/about_settings"
               android:textColor="#c4e2fe"
               android:textSize="16sp"
               android:gravity="center"/>
           <RelativeLayout 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/freeme_wifi_tips_margrin_top">
	           <TextView 
	               android:id="@+id/freeme_wifi_tips"
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_centerHorizontal="true"
	               android:textColor="#8fc5f7"
	               android:textSize="15sp"/>
	           <LinearLayout 
	               android:layout_width="wrap_content"
               	   android:layout_height="wrap_content"
               	   android:layout_marginTop="5dip"
               	   android:layout_alignLeft="@id/freeme_wifi_tips"
               	   android:layout_below="@id/freeme_wifi_tips"
               	   android:orientation="vertical">
		           <LinearLayout 
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:layout_marginTop="5dip">
		               <ImageView 
		                   android:layout_width="wrap_content"
		               	   android:layout_height="wrap_content"
		               	   android:layout_gravity="center_vertical"
		               	   android:layout_marginRight="5dip"
		               	   android:src="@drawable/freeme_wifi_point"/>
		               <TextView 
			               android:id="@+id/freeme_wifi_tips_1"
			               android:layout_width="150dip"
			               android:layout_height="wrap_content"
			               android:textColor="#8fc5f7"
			               android:textSize="13sp"/>
		           </LinearLayout>
		           <LinearLayout 
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:layout_marginTop="5dip">
		               <ImageView 
		                   android:layout_width="wrap_content"
		               	   android:layout_height="wrap_content"
		               	   android:layout_marginRight="5dip"
		               	   android:layout_gravity="center_vertical"
		               	   android:src="@drawable/freeme_wifi_point"/>
		               <TextView 
			               android:id="@+id/freeme_wifi_tips_2"
			               android:layout_width="150dip"
			               android:layout_height="wrap_content"
			               android:textColor="#8fc5f7"
			               android:textSize="13sp"/>
		           </LinearLayout>
		           <LinearLayout 
		               android:layout_width="wrap_content"
		               android:layout_height="wrap_content"
		               android:layout_marginTop="5dip">
		               <ImageView 
		                   android:layout_width="wrap_content"
		               	   android:layout_height="wrap_content"
		               	   android:layout_marginRight="5dip"
		               	   android:layout_marginTop="6dp"
		               	   android:src="@drawable/freeme_wifi_point"/>
		               <TextView 
			               android:id="@+id/freeme_wifi_tips_3"
			               android:layout_width="150dip"
			               android:layout_height="30dp"
			               android:textColor="#8fc5f7"
			               android:textSize="13sp"/>
		           </LinearLayout>
		         </LinearLayout>
	         </RelativeLayout>
         </LinearLayout>
         <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:paddingLeft="20dip"
           android:paddingRight="20dip"
           android:gravity="center"
           android:layout_below="@+id/freeme_wifi"
             >
           <CheckBox 
               android:id="@+id/freeme_wifi_settings_auto_share"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#7a7e83"
               android:textSize="15sp"
               android:layout_marginTop="20dp"
               android:layout_centerHorizontal="true"
               android:button="@drawable/freeme_wifi_checkbox_button"
               android:text="@string/freeme_wifi_settings_auto_share"/>
           <CheckBox 
               android:id="@+id/freeme_wifi_settings_auto_notify"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#7a7e83"
               android:textSize="15sp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="10dp"
			   android:button="@drawable/freeme_wifi_checkbox_button"
               android:text="@string/freeme_wifi_settings_auto_notify"
               android:layout_below="@+id/freeme_wifi_settings_auto_share"/>
           <Button 
               android:id="@+id/freeme_wifi_connect"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:textColor="#ffffff"
               android:textSize="18sp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="30dp"
               android:layout_below="@+id/freeme_wifi_settings_auto_notify"
               android:layout_marginBottom="-10dp"
               />
         </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
    